{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build K15 GB Emulator - DEBUG",
            "type": "shell",
            "windows": {
                "command": "build.bat",
                "args": [
                    "debug"
                ]
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build K15 GB Emulator - RELEASE",
            "type": "shell",
            "windows": {
                "command": "build.bat",
                "args": [
                    "release"
                ]
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Dump disassembly of release build",
            "type": "shell",
            "windows": {
                "command": "disassemble_release.bat",
                "args": [
                ]
            },
            "problemMatcher": []
        }
    ]
}